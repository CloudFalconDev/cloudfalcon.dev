{
	"name": "cloudfalcon-nextjs",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"check-latest": "npm-check-updates",
		"force-latest": "npm-check-updates -u",
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "biome lint .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check . && npm run type-check",
		"check:all": "biome check . && npm run type-check",
		"type-check": "tsc --noEmit",
		"type-check:strict": "tsc --noEmit --strict",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"lighthouse": "mkdir -p .lighthouse && lighthouse http://localhost:3000 --output=html --output-path=./.lighthouse/lighthouse-report.html --view",
		"lighthouse:mobile": "mkdir -p .lighthouse && lighthouse http://localhost:3000 --preset=mobile --form-factor=mobile --output=html --output-path=./.lighthouse/lighthouse-report-mobile.html --view",
		"lighthouse:desktop": "mkdir -p .lighthouse && lighthouse http://localhost:3000 --preset=desktop --form-factor=desktop --output=html --output-path=./.lighthouse/lighthouse-report-desktop.html --view",
		"lighthouse:ci": "node scripts/lighthouse-ci.mjs",
		"lighthouse:ci:mobile": "PRESET=mobile FORM_FACTOR=mobile node scripts/lighthouse-ci.mjs",
		"lighthouse:ci:desktop": "PRESET=desktop FORM_FACTOR=desktop node scripts/lighthouse-ci.mjs",
		"lighthouse:all": "npm run lighthouse:ci:mobile && npm run lighthouse:ci:desktop",
		"prepare": "husky"
	},
	"dependencies": {
		"@radix-ui/react-accordion": "^1.2.12",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@tailwindcss/postcss": "^4.1.18",
		"framer-motion": "^12.23.26",
		"gray-matter": "^4.0.3",
		"next": "^16.1.1",
		"next-mdx-remote": "^5.0.0",
		"react": "^19.2.3",
		"react-calendly": "^4.4.0",
		"react-countup": "^6.5.3",
		"react-dom": "^19.2.3",
		"react-intersection-observer": "^10.0.0",
		"three": "^0.182.0"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json,css}": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@next/third-parties": "^16.1.1",
		"@radix-ui/react-slot": "^1.2.4",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.1",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@types/three": "^0.182.0",
		"@vitest/ui": "^4.0.16",
		"chrome-launcher": "^1.2.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"lighthouse": "^13.0.1",
		"lint-staged": "^16.2.7",
		"lucide-react": "^0.562.0",
		"npm-check-updates": "^19.2.0",
		"postcss": "^8.5.6",
		"shadcn": "^3.6.2",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	}
}
