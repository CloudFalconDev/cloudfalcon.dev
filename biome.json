{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"**/*.css",
			"!!**/node_modules",
			"!!**/.next",
			"!!**/out",
			"!!**/dist",
			"!!**/build",
			"!!**/coverage"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error"
			},
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noExplicitAny": "warn"
			},
			"performance": {
				"noAccumulatingSpread": "warn",
				"noImgElement": "off"
			},
			"style": {
				"useImportType": "error",
				"useNodejsImportProtocol": "error"
			},
			"a11y": {
				"noRedundantRoles": "warn",
				"useKeyWithClickEvents": "warn",
				"useKeyWithMouseEvents": "warn"
			},
			"complexity": {
				"noForEach": "off",
				"noImportantStyles": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"tailwindDirectives": true
		}
	}
}
